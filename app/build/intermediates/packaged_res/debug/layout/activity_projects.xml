<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ProjectsActivity">

<!--    <include layout="@layout/toolbar" />-->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Image_Project_backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Image_Project_addProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/LBL_Projects_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Image_Project_backArrow"
        android:layout_marginTop="10dp"
        android:text="Projects"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginHorizontal="20dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_Project_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_below="@id/LBL_Projects_title"/>




</RelativeLayout>